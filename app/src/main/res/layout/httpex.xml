<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="@color/siyah"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:nestedScrollingEnabled="false"
        android:measureWithLargestChild="false"
        android:layout_alignParentStart="true">


    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="168dp"
        android:layout_height="25dp"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvHttp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="67dp"
        android:background="@color/annen"
        android:layout_marginRight="10dp"
        android:textStyle="italic"
        android:text="SHOW ME !"
        android:textColor="@color/siyah" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_table"
        android:layout_width="85dp"

        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:padding="2dp"
        android:stretchColumns="1">
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
        <TableRow>


            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="ChangeFromYearLow"
                android:textColor="@color/beyaz"/>

            <TextView
                android:id="@+id/tvHttp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blue"

                android:text="" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:textColor="@color/beyaz"
                android:padding="3dip"
                android:text="PercentChangeFromYearHigh" />

            <TextView
                android:id="@+id/tvHttp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow android:layout_width="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:textColor="@color/beyaz"
                android:text="Bid" />

            <TextView
                android:id="@+id/tvHttp2"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dip"
                android:text="" />
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow android:layout_width="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:textColor="@color/beyaz"
                android:text="PriceSales" />

            <TextView
                android:id="@+id/tvHttp3"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dip"
                android:text="" />
        </TableRow>
        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow android:layout_width="wrap_content">

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:textColor="@color/beyaz"
                android:text="AverageDailyVolume" />

            <TextView
                android:id="@+id/tvHttp4"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dip"

                android:text="" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="168dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/button"
        android:textStyle="italic"

        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:background="@color/annen"

        android:layout_alignTop="@+id/button" />


</RelativeLayout>
